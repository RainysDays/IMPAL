<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgregister"
    tools:context=".RegisteroActivity">

    <Button
        android:id="@+id/bLogin"
        android:layout_width="262dp"
        android:layout_height="43dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:background="@drawable/own"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="211dp" />

    <EditText
        android:id="@+id/RegUsername"
        android:layout_width="267dp"
        android:layout_height="43dp"
        android:background="@drawable/border_style"
        android:inputType="text"
        android:text="Username"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="285dp" />

    <EditText
        android:id="@+id/RegPassword"
        android:layout_width="265dp"
        android:layout_height="41dp"
        android:background="@drawable/border_style"
        android:inputType="textPassword"
        android:text="Password"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="348dp" />

    <EditText
        android:id="@+id/RegConfirm"
        android:layout_width="265dp"
        android:layout_height="41dp"
        android:background="@drawable/border_style"
        android:inputType="textPassword"
        android:text="Password"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="414dp" />

    <Button
        android:id="@+id/bDaftar"
        android:layout_width="106dp"
        android:layout_height="43dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:background="@drawable/btndaftar"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="482dp" />

    <Button
        android:id="@+id/bBack"
        android:layout_width="106dp"
        android:layout_height="43dp"
        android:layout_marginEnd="232dp"
        android:layout_marginRight="232dp"
        android:background="@drawable/btnback"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="482dp" />

</android.support.constraint.ConstraintLayout>